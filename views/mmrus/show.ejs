<% layout('layouts/boilerplate')%>
   <div class="row">
       <div class="col-6 ">
           <div class="card mb-5">
                <img  src="<%= mmru.image%>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"><%= mmru.nom%></h5>
                    <p class="card-text"> <small class="text-muted"><%= mmru.ville%>, <%= mmru.adresse%></small> </p>
                    <p class="card-text">
                    <%= mmru.description%>
                    </p>
                </div>
                
                <div class="card-body">
                    <a class="card-link btn btn-warning" href="/mmrus/<%= mmru._id%>/edit">Editer</a>
                    <form class="d-inline" action="/mmrus/<%= mmru._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
                <div class="card-footer text-muted">2day ago</div>
           </div>
       </div>
       <div class="col-6">
        <h2>Ajouter un avis</h2>
        <form action="/mmrus/<%=mmru._id%>/reviews" method="POST" class="mb-3 validated-form" novalidate>
            <div class="mb-3">
                <label class="form-label" for="rating">Notation</label>
                <input class="form-range" type="range" min="1" max="5" id="rating" name="review[rating]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="body">Avis</label>
                <textarea class="form-control" name="review[body]" id="" cols="3" rows="5" required></textarea>
            </div>
            <button class="btn btn-success">Ajouter</button>
        </form>
        <% for(let review of mmru.avis) { %>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Notation: <%= review.rating%>
                    </h5>
                    <p>
                        <%= review.body%>
                    </p>
                    <form action="/mmrus/<%= mmru._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </div>
            </div>
            <% } %>
       </div>
   </div>
    
     